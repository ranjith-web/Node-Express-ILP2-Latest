extends ../layout
block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Create New Issues

                form(name="add-estimation", method="post" action='/issueTracker/update')
                    div.form-group
                        label(for='Description') Description:
                        input#description.form-control(type="text", name="description" value=description)
                    div.form-group
                        label(for='severity') Severity:
                        select#severity.form-control(name="severity" value=severity)
                            option(value="Major", selected=(severity == 'Major')) Major
                            option(value="Minor", selected=(severity == 'Minor')) Minor
                            option(value="Critical", selected=(severity == 'Critical')) Critical
                    div.form-group
                        label(for='status') Status:
                        select#status.form-control(name="status" value=status)
                            option(value="Open", selected=(status == 'Open')) Open
                            option(value="In Progress", selected=(status == 'In Progress'))  In Progress
                            option(value="Closed", selected=(status == 'Closed')) Closed
                    div.form-group
                        label(for='created_date') Created Date:
                        input#created_date.form-control(type='date' name='created_date' value=created_date)
                        input#created_date.form-control.hidden(type='text' name='id' value=id)
                    div.form-group
                        label(for='resolved_date') Resolved Date:
                        input#resolved_date.form-control(type='date' name='resolved_date' value=resolved_date)
                    button.btn.btn-primary(type='submit') Edit Issues